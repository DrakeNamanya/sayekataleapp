# ========================================
# SayeKatale Environment Variables Template
# ========================================
# 
# IMPORTANT: This is a template file showing all available environment variables.
# DO NOT put real values in this file!
# 
# For Development:
# 1. Copy this file: cp .env.example .env.development
# 2. Fill in development values in .env.development
# 3. NEVER commit .env.development to git
#
# For Production:
# Use GitHub Secrets or CI/CD environment variables
# See: IMPLEMENTATION_GUIDE.md for GitHub Secrets setup
#

# ========================================
# App Environment
# ========================================
PRODUCTION=false
DEBUG_MODE=true
APP_VERSION=1.0.0

# ========================================
# API Configuration
# ========================================
API_BASE_URL=https://api.sayekatale.com
API_TIMEOUT=30000

# ========================================
# PawaPay Mobile Money Integration
# ========================================
# Get your API token from: https://dashboard.pawapay.co.uk/
# CRITICAL: Keep this secret! Never commit to git!
PAWAPAY_API_TOKEN=your_pawapay_api_token_here

# Webhook callback URLs (where PawaPay sends payment notifications)
PAWAPAY_DEPOSIT_CALLBACK=https://api.sayekatale.com/webhooks/pawapay/deposit
PAWAPAY_WITHDRAWAL_CALLBACK=https://api.sayekatale.com/webhooks/pawapay/withdrawal

# ========================================
# Firebase Configuration
# ========================================
# Get these from Firebase Console > Project Settings > General
FIREBASE_PROJECT_ID=sayekataleapp
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=sayekataleapp.firebaseapp.com
FIREBASE_STORAGE_BUCKET=sayekataleapp.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here

# ========================================
# Feature Flags
# ========================================
ENABLE_PAWAPAY=true
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true

# ========================================
# Development Notes
# ========================================
#
# How to use these variables:
#
# 1. Flutter Build (Command Line):
#    flutter build apk --release \
#      --dart-define=PRODUCTION=true \
#      --dart-define=PAWAPAY_API_TOKEN=$PAWAPAY_API_TOKEN \
#      --dart-define=FIREBASE_API_KEY=$FIREBASE_API_KEY
#
# 2. Flutter Run (Development):
#    flutter run \
#      --dart-define=PRODUCTION=false \
#      --dart-define=PAWAPAY_API_TOKEN=test_token
#
# 3. GitHub Actions (CI/CD):
#    Use GitHub repository secrets and pass as --dart-define flags
#    See: .github/workflows/deploy-production.yml
#
# 4. In Dart Code:
#    import 'config/environment.dart';
#    final token = Environment.pawaPayToken;
#
# ========================================
# Security Checklist
# ========================================
# ✅ .env.development added to .gitignore
# ✅ Never commit real API tokens to git
# ✅ Use GitHub Secrets for production builds
# ✅ Rotate tokens if accidentally exposed
# ✅ Use different tokens for dev/staging/production
#
